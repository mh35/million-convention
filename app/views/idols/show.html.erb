<h1><%= @idol.name %></h1>
<ul class="threads_list">
<% @threads.each do |idol_thread| %>
    <li><%= idol_thread.name %></li>
<% end %>
</ul>
<%= form_with model: @idol_thread, url: [@idol, @idol_thread] do |form| %>
    <p><label>スレッド名:<%= form.text_field :name %></label></p>
    <p><%= form.submit %></p>
<% end %>